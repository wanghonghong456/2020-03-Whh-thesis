@Article{张宗新2020,
  author   = {张宗新 and 林弘毅 and 李欣越},
  title    = {经济政策不确定性如何影响金融市场间的流动性协同运动?——基于中国金融周期的视角},
  journal  = {统计研究},
  year     = {2020},
  volume   = {37},
  number   = {02},
  pages    = {37--51},
  abstract = {金融市场间流动性出现高协同运动是发生危机传染的重要表现之一,因此,针对流动性动态联动效应的研究显得极为重要。本文基于中国金融市场数据测算了2003-2018年间我国股市、债市流动性,并对Colacito等(2011)的混频数据抽样动态条件相关系数模型(DCC-MIDAS)进行了扩展,同时从金融周期视角出发,运用扩展后的模型考察了经济不确定性在不同时间区间内对于流动性波动率和相关性是否存在不同的作用效果。研究结果表明,相较于单因子混频模型,引入经济政策不确定性的多因子混频模型可以更好地捕捉我国股债两市相关性的动态变化;同时,经济政策不确定性的提高会降低股债两市流动性的正相关性,但这一作用效果会在金融周期的拐点处转为加强两者的正相关性。本文不仅为讨论股债两市联动效应提供了流动性的新视角,也为金融市场风险监管提供了重要的参考依据。},
  keywords = {经济政策不确定性;;流动性;;金融周期;;动态相关性},
}

